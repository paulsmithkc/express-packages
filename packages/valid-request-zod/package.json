{
  "name": "valid-request-zod",
  "version": "2.0.3",
  "private": false,
  "description": "Express middleware for validating the request with Zod.",
  "keywords": [
    "express",
    "middleware",
    "validate",
    "validator",
    "validation",
    "request",
    "body",
    "zod"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "exports": {
    "import": "./dist/index.mjs",
    "require": "./dist/index.js"
  },
  "scripts": {
    "reinstall": "rm -rf node_modules package-lock.json && npm install",
    "build": "npm run clean && npm run build:cjs && npm run build:esm",
    "clean": "npx rimraf dist",
    "build:ts": "npx tsc",
    "build:esm": "npx tsup --format esm --minify --env.NODE_ENV production",
    "build:cjs": "npx tsup --format cjs --minify --env.NODE_ENV production",
    "test": "npx jest --collectCoverage",
    "example": "npx nodemon ./examples/server.js",
    "pretest": "npm run build",
    "prepack": "npm run build",
    "prepublish": "npm run build",
    "preexample": "npm run build"
  },
  "author": "Paul Smith",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/paulsmithkc/express-packages"
  },
  "bugs": {
    "url": "https://github.com/paulsmithkc/express-packages/issues"
  },
  "homepage": "https://github.com/paulsmithkc/express-packages/tree/main/packages/valid-request-zod#readme",
  "peerDependencies": {
    "express": ">=4.0.0",
    "zod": ">=3.0.0"
  },
  "devDependencies": {
    "@types/express": ">=4.0.0",
    "dotenv": ">=10.0.0",
    "express": ">=4.0.0",
    "mongodb": ">=4.0.0",
    "typescript": ">=4.0.0",
    "zod": ">=3.0.0"
  }
}
