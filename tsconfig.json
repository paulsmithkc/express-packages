{
  "compilerOptions": {
    "incremental": true,
    "rootDirs": ["./src", "./packages/*/src", "./tests", "./packages/*/tests"],
    "outDir": "./dist",
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
