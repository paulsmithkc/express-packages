{
  "compilerOptions": {
    "incremental": false,
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "rootDirs": ["./src", "./packages/*/src", "./tests", "./packages/*/tests"],
    "outDir": "dist",
    "paths": {
      "valid-oid": ["./packages/valid-oid/src/index.ts"],
      "valid-body-joi": ["./packages/valid-body-joi/src/index.ts"],
      "valid-body-zod": ["./packages/valid-body-zod/src/index.ts"],
      "valid-request-joi": ["./packages/valid-request-joi/src/index.ts"],
      "valid-request-zod": ["./packages/valid-request-zod/src/index.ts"],
      "joi-mongodb": ["./packages/joi-mongodb/src/index.ts"]
    }
  },
  "exclude": ["./node_modules", "./dist", "./example", "./examples"]
}
